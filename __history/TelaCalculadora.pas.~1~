unit TelaCalculadora;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    LabelResultado: TLabel;
    Label2: TLabel;
    ButtonSoma: TButton;
    ButtonSubtracao: TButton;
    ButtonMultiplicacao: TButton;
    ButtonDivisao: TButton;
    ButtonCalcular: TButton;
    ButtonNum1: TButton;
    ButtonNum2: TButton;
    ButtonNum3: TButton;
    ButtonNum4: TButton;
    ButtonNum5: TButton;
    ButtonNum6: TButton;
    ButtonNum7: TButton;
    ButtonNum8: TButton;
    ButtonNum9: TButton;
    ButtonNum0: TButton;
    ButtonLimpar: TButton;
    LabelOperacao: TLabel;
    procedure ButtonSomaClick(Sender: TObject);
    procedure ButtonSubtracaoClick(Sender: TObject);
    procedure ButtonMultiplicacaoClick(Sender: TObject);
    procedure ButtonDivisaoClick(Sender: TObject);
    procedure ButtonNum1Click(Sender: TObject);
    procedure ButtonNum2Click(Sender: TObject);
    procedure ButtonNum3Click(Sender: TObject);
    procedure ButtonNum4Click(Sender: TObject);
    procedure ButtonNum5Click(Sender: TObject);
    procedure ButtonNum6Click(Sender: TObject);
    procedure ButtonNum7Click(Sender: TObject);
    procedure ButtonNum8Click(Sender: TObject);
    procedure ButtonNum9Click(Sender: TObject);
    procedure ButtonNum0Click(Sender: TObject);
    procedure ButtonCalcularClick(Sender: TObject);
    procedure ButtonLimparClick(Sender: TObject);
  private
    operacao : Integer;
    resultado : Integer;
    valor1 : Integer;
    valor2 : Integer;
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.ButtonNum0Click(Sender: TObject);
begin
  LabelResultado.Caption := LabelResultado.Caption + '0';
end;

procedure TForm1.ButtonNum1Click(Sender: TObject);
begin
  LabelResultado.Caption := LabelResultado.Caption + '1';
end;

procedure TForm1.ButtonNum2Click(Sender: TObject);
begin
  LabelResultado.Caption := LabelResultado.Caption + '2';
end;

procedure TForm1.ButtonNum3Click(Sender: TObject);
begin
  LabelResultado.Caption := LabelResultado.Caption + '3';
end;

procedure TForm1.ButtonNum4Click(Sender: TObject);
begin
  LabelResultado.Caption := LabelResultado.Caption + '4';
end;

procedure TForm1.ButtonNum5Click(Sender: TObject);
begin
  LabelResultado.Caption := LabelResultado.Caption + '5';
end;

procedure TForm1.ButtonNum6Click(Sender: TObject);
begin
  LabelResultado.Caption := LabelResultado.Caption + '6';
end;

procedure TForm1.ButtonNum7Click(Sender: TObject);
begin
  LabelResultado.Caption := LabelResultado.Caption + '7';
end;

procedure TForm1.ButtonNum8Click(Sender: TObject);
begin
  LabelResultado.Caption := LabelResultado.Caption + '8';
end;

procedure TForm1.ButtonNum9Click(Sender: TObject);
begin
  LabelResultado.Caption := LabelResultado.Caption + '9';
end;

procedure TForm1.ButtonSomaClick(Sender: TObject);
begin
  operacao := 1;
  valor1 := StrToInt(LabelResultado.Caption);
  LabelOperacao.Caption := '+';
  LabelResultado.Caption := '';

end;

procedure TForm1.ButtonSubtracaoClick(Sender: TObject);
begin
  operacao := 2;
  valor1 := StrToInt(LabelResultado.Caption);
  LabelOperacao.Caption := '-';
  LabelResultado.Caption := '';

end;

procedure TForm1.ButtonMultiplicacaoClick(Sender: TObject);
begin
  operacao := 3;
  valor1 := StrToInt(LabelResultado.Caption);
  LabelOperacao.Caption := '*';
  LabelResultado.Caption := '';

end;

procedure TForm1.ButtonDivisaoClick(Sender: TObject);
begin
  operacao := 4;
  valor1 := StrToInt(LabelResultado.Caption);
  LabelOperacao.Caption := '/';
  LabelResultado.Caption := '';

end;

procedure TForm1.ButtonLimparClick(Sender: TObject);
begin
  LabelResultado.Caption := '';
  LabelOperacao.Caption := '';
end;

procedure TForm1.ButtonCalcularClick(Sender: TObject);
begin
  valor2 := StrToInt(LabelResultado.Caption);

  case operacao of
    1: begin
      LabelResultado.Caption := IntToStr(valor1 + valor2);
    end;
    2: begin
      LabelResultado.Caption := IntToStr(valor1 - valor2);
    end;
    3: begin
      LabelResultado.Caption := IntToStr(valor1 * valor2);
    end;
    4: begin
      LabelResultado.Caption := IntToStr(valor1 div valor2);
    end;

  end;

end;

end.
